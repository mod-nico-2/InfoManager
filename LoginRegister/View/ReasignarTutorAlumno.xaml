<UserControl x:Class="LoginRegister.View.ReasignarTutorAlumno"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoginRegister.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="LightGray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" Grid.ColumnSpan="3" Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Tutor Actual" Binding="{Binding TutorActual}" />
                    <DataGridTextColumn Width="*" Header="Alumno" Binding="{Binding AlumnoNombre}" />
                    <DataGridTemplateColumn Width="*" Header="Nuevo Tutor">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NuevoTutor}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellEditingTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Path=ComboTutores}"
                                   SelectedItem="{Binding NuevoTutor}"
                                   DisplayMemberPath="Nombre" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellEditingTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

        </ScrollViewer>
        <Button Content="Volver" HorizontalAlignment="Left" Margin="654,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="30" Width="98"/>

    </Grid>
</UserControl>
